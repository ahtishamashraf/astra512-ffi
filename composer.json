{
  "name": "ahtishamashraf/astra512-ffi",
  "description": "PHP FFI bindings for ASTRA-512 (research SIV-style AEAD) with key management helpers.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "crypto",
    "aead",
    "ffi",
    "astra512",
    "siv"
  ],
  "require": {
    "php": ">=8.1",
    "ext-ffi": "*",
    "ext-sodium": "*"
  },
  "autoload": {
    "psr-4": {
      "Astra512\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "post-install-cmd": [
      "@php scripts/install-bin.php"
    ],
    "post-update-cmd": [
      "@php scripts/install-bin.php"
    ]
  }
}
